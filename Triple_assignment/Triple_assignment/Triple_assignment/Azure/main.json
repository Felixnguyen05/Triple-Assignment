      "type": "string",
      "value": "[variables('storageAccountName')]"
    },
    "imageQueueName": {
      "type": "string",
      "value": "[parameters('imageQueueName')]"
    },
    "startQueueName": {
      "type": "string",
      "value": "[parameters('startQueueName')]"
    },
    "imagesContainer": {
      "type": "string",
      "value": "[parameters('imagesContainerName')]"
    },
    "jobStatusTable": {
      "type": "string",
      "value": "[parameters('jobStatusTableName')]"
    },
    "storageConnectionString": {
      "type": "string",
      "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};AccountKey={1};EndpointSuffix={2}', variables('storageAccountName'), listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-01-01').keys[0].value, environment().suffixes.storage)]"
