        "[resourceId('Microsoft.Web/serverfarms', format('{0}-plan', variables('functionAppName')))]",
        "[resourceId('Microsoft.Storage/storageAccounts/queueServices/queues', split(format('{0}/default/{1}', variables('storageAccountName'), parameters('startQueueName')), '/')[0], split(format('{0}/default/{1}', variables('storageAccountName'), parameters('startQueueName')), '/')[1], split(format('{0}/default/{1}', variables('storageAccountName'), parameters('startQueueName')), '/')[2])]",
